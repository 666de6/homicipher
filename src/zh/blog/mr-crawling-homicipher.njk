---
layout: base.njk
---
{# 获取当前语言 #}
{% set currentLang = "en" %}
{% for lang in ["zh", "ja", "ko", "fil", "vi", "id", "ms", "th", "ru", "uk", "de", "pt"] %}
  {% if page.url.startsWith("/" + lang + "/") %}
    {% set currentLang = lang %}
  {% endif %}
{% endfor %}

{# 获取当前页面的i18n数据 #}
{% if i18n[currentLang] %}
  {% set translations = i18n[currentLang] %}
{% else %}
  {% set translations = i18n["en"] %}
{% endif %}

<nav class="h-10 text-xs md:text-md px-4 text-light font-black bg-gradient-to-l from-green to-red flex items-center">
    <a href="{{'/' | localizeUrl(currentLang)}}" class="nav-link hover:text-yellow hover:underline hover:decoration-2 hover:underline-offset-8">{{translations.navigation.navbar[0].title}}</a>
    >
    <a href="{{'/blogentry' | localizeUrl(currentLang) }}" class="nav-link hover:text-yellow hover:underline hover:decoration-2 hover:underline-offset-8">{{translations.navigation.navbar[1].title}}</a>
    >
    <a href="{{'/blog/mr-crawling-homicipher' | localizeUrl(currentLang) }}" class="nav-link hover:text-yellow underline hover:decoration-2 hover:underline-offset-8">{{translations.pages['mr-crawling-homicipher'].pageTitle}}</a>
</nav>
  

<article class="p-4 md:p-8 bg-green min-h-screen">
    <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <header class="mb-8 text-center">
            <h1 class="text-2xl md:text-3xl font-black text-red mb-4">
                {{ translations.pages['mr-crawling-homicipher'].pageTitle }}
            </h1>
            <p class="text-light text-sm italic mb-6">{{ translations.pages['mr-crawling-homicipher'].lastUpdated }}</p>
            <!-- Social Share Buttons -->
            <div class="flex justify-center items-center gap-3 mb-6">
                <!-- Twitter/X -->
                <a href="https://twitter.com/intent/tweet?url=https://homicipher.com/zh/blog/mr-crawling-homicipher&text={{ translations.pages['mr-crawling-homicipher'].social_share.twitter_text }}" 
                   target="_blank"
                   class="flex items-center gap-2 px-3 py-2 bg-red bg-opacity-100 rounded-lg hover:bg-opacity-20 transition-all duration-300 text-light text-sm">
                    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"/>
                    </svg>
                </a>
            
                <!-- Facebook -->
                <a href="https://www.facebook.com/sharer/sharer.php?u=https://homicipher.com/zh/blog/mr-crawling-homicipher" 
                   target="_blank"
                   class="flex items-center gap-2 px-3 py-2 bg-red bg-opacity-100 rounded-lg hover:bg-opacity-20 transition-all duration-300 text-light text-sm">
                    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951"/>
                    </svg>
                </a>
            
                <!-- Pinterest -->
                <a href="https://pinterest.com/pin/create/button/?url=https://homicipher.com/zh/blog/mr-crawling-homicipher" 
                   target="_blank"
                   class="flex items-center gap-2 px-3 py-2 bg-red bg-opacity-100 rounded-lg hover:bg-opacity-20 transition-all duration-300 text-light text-sm">
                    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 0a8 8 0 0 0-2.915 15.452c-.07-.633-.134-1.606.027-2.297.146-.625.938-3.977.938-3.977s-.239-.479-.239-1.187c0-1.113.645-1.943 1.448-1.943.682 0 1.012.512 1.012 1.127 0 .686-.437 1.712-.663 2.663-.188.796.4 1.446 1.185 1.446 1.422 0 2.515-1.5 2.515-3.664 0-1.915-1.377-3.254-3.342-3.254-2.276 0-3.612 1.707-3.612 3.471 0 .688.265 1.425.595 1.826a.24.24 0 0 1 .056.23c-.061.252-.196.796-.222.907-.035.146-.116.177-.268.107-1-.465-1.624-1.926-1.624-3.1 0-2.523 1.834-4.84 5.286-4.84 2.775 0 4.932 1.977 4.932 4.62 0 2.757-1.739 4.976-4.151 4.976-.811 0-1.573-.421-1.834-.919l-.498 1.902c-.181.695-.669 1.566-.995 2.097A8 8 0 1 0 8 0"/>
                    </svg>
                </a>
            
                <!-- Copy Link -->
                <button onclick="copyPageUrl()"
                        class="flex items-center gap-2 px-3 py-2 bg-red bg-opacity-100 rounded-lg hover:bg-opacity-20 transition-all duration-300 text-light text-sm">
                    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                    </svg>
                </button>
            </div>
            <img src="/assets/crawling.jpeg" 
                alt="Mr. Crawling - Homicipher Character" 
                title="The mysterious Mr. Crawling who has captured our hearts"
                class="w-full max-w-3xl mx-auto rounded-lg shadow-lg mb-6 object-cover" style="max-height: 400px;">
        </header>

        <!-- Content -->
        <div class="text-light mb-8">
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.intro }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.entrance }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.character_depth }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.library_scene }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.endings }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.character_design }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.dialogue }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.encouragement }}</p>
            <p class="mb-4">{{ translations.pages['mr-crawling-homicipher'].content.conclusion }}</p>

            <div class="text-sm bg-red bg-opacity-10 p-4 rounded text-[#ffc107] mb-4">
                <strong>💭 个人笔记：</strong><br>
                {{ translations.pages['mr-crawling-homicipher'].content.personal_note }}
            </div>
        </div>

        <!-- Related Reading -->
        <section class="mt-12 mb-8">
            <h2 class="text-xl font-bold text-red mb-4">{{ translations.pages['homicipher-dictionary'].relatedReading.title }}</h2>
            {% for key, article in translations.pages['homicipher-dictionary'].relatedReading.articles %}
            <div class="text-light">
                <a href="{{ article.path | localizeUrl(currentLang) }}" class="block p-4 bg-red bg-opacity-10 transition-all duration-300 hover:bg-opacity-20">
                    <div class="flex items-center gap-4">
                        <img src="{{ article.img }}" 
                             alt="{{ article.title }}" 
                             title="{{ article.title }}" 
                             class="w-24 h-24 object-cover rounded">
                        <div>
                            <h3 class="font-bold mb-2 underline text-red">{{ article.title }}</h3>
                            <p class="text-sm text-gray-300">{{ article.description }}</p>
                        </div>
                    </div>
                </a>
            </div>
            {% endfor %}
        </section>
    </div>
</article>
